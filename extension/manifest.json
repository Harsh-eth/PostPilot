{
  "manifest_version": 3,
  "name": "PostPilot",
  "version": "1.0.0",
  "description": "AI-powered X/Twitter post summarization and reply suggestions",
  
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "http://localhost:8787/*",
    "https://your-backend-domain.com/*"
  ],
  
  "background": {
    "service_worker": "src/background.js",
    "scripts": ["src/config.js", "src/background.js"]
  },
  
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "PostPilot"
  },
  
  
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}